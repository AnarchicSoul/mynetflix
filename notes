deploy jenkins:
    Source: https://www.jenkins.io/doc/book/installing/kubernetes/
    # git clone https://github.com/scriptcamp/kubernetes-jenkins
    kubectl create namespace devops-tools
    # kubectl apply -f kubernetes-jenkins/volume.yaml
    # kubectl apply -f kubernetes-jenkins/serviceAccount.yaml
    helm repo add jenkinsci https://charts.jenkins.io
    helm repo update
    # helm pull jenkinsci/jenkins
    helm install jenkins -n devops-tools -f values.yaml jenkins-5.2.0.tgz



